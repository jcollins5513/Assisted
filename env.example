# Application Configuration
NODE_ENV=development
PORT=3001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_NAME="Car Sales AI Assistant"
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/car-sales-ai
MONGODB_USER=admin
MONGODB_PASSWORD=password
MONGODB_DATABASE=car-sales-ai

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@carsalesai.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# External API Keys
OPENAI_API_KEY=your-openai-api-key
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Configuration
DEBUG=true
HOT_RELOAD=true
ENABLE_SWAGGER=true

# Production Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Performance Configuration
ENABLE_GZIP=true
ENABLE_MINIFICATION=true
CACHE_TTL=3600

# Voice Recognition & AI Services
GOOGLE_CLOUD_SPEECH_API_KEY=your-google-cloud-speech-api-key
AZURE_SPEECH_SERVICE_KEY=your-azure-speech-service-key
AZURE_SPEECH_SERVICE_REGION=your-azure-region

# Content Generation Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key

# Social Media Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_BASIC_DISPLAY_APP_ID=your-instagram-app-id
INSTAGRAM_BASIC_DISPLAY_APP_SECRET=your-instagram-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Remote Execution & Background Removal
REMOTE_EXECUTION_ENABLED=true
BACKGROUND_REMOVAL_MODEL=u2net
BACKGROUND_REMOVAL_QUALITY=high
PYTHON_PATH=/path/to/python/environment
BACKGROUND_REMOVAL_SCRIPT_PATH=/path/to/backgroundremover-cli.ps1
PROCESSING_INPUT_PATH=/path/to/processing/input
PROCESSING_OUTPUT_PATH=/path/to/processing/output

# Quality Assessment
QUALITY_ASSESSMENT_ENABLED=true
QUALITY_THRESHOLD=70
AUTO_APPROVAL_THRESHOLD=90

# Real-time Communication
SOCKET_IO_ENABLED=true
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# Analytics & Reporting
ANALYTICS_ENABLED=true
REPORTING_ENABLED=true
DATA_RETENTION_DAYS=365

# Notification Services
PUSH_NOTIFICATIONS_ENABLED=true
WEBHOOK_URL=your-webhook-url
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Payment Processing (if applicable)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Third-party Integrations
CRM_API_KEY=your-crm-api-key
CRM_API_URL=your-crm-api-url
INVENTORY_API_KEY=your-inventory-api-key
INVENTORY_API_URL=your-inventory-api-url
FINANCING_API_KEY=your-financing-api-key
FINANCING_API_URL=your-financing-api-url

# Development Tools
VSCODE_DEBUG_PORT=9229
NODEMON_WATCH=src
ESLINT_ENABLED=true
PRETTIER_ENABLED=true

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/car-sales-ai-test
JEST_TIMEOUT=10000
COVERAGE_THRESHOLD=80

# Docker Configuration
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-docker-registry
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# Kubernetes Configuration (if using K8s)
KUBERNETES_NAMESPACE=car-sales-ai
KUBERNETES_REPLICAS=3
KUBERNETES_RESOURCE_LIMITS_CPU=500m
KUBERNETES_RESOURCE_LIMITS_MEMORY=512Mi

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=false
LOAD_BALANCER_HEALTH_CHECK_PATH=/api/health
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=30s

# CDN Configuration
CDN_ENABLED=false
CDN_URL=your-cdn-url
CDN_API_KEY=your-cdn-api-key

# Monitoring & Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Feature Flags
FEATURE_VOICE_RECOGNITION=true
FEATURE_CONTENT_GENERATION=true
FEATURE_BACKGROUND_REMOVAL=true
FEATURE_SOCIAL_MEDIA_PUBLISHING=true
FEATURE_ANALYTICS=true
FEATURE_REAL_TIME_FEEDBACK=true
